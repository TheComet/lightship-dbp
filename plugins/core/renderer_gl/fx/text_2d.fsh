#version 330 core

// ----------------------------------------------------------------------------
// vertex input data
// ----------------------------------------------------------------------------

in vec2 texCoord_fragment;
in vec4 colourDiffuse_fragment;

// ----------------------------------------------------------------------------
// output data
// ----------------------------------------------------------------------------

out vec3 colour;

// ----------------------------------------------------------------------------
// samplers
// ----------------------------------------------------------------------------

uniform sampler2D glyphSampler;

// ----------------------------------------------------------------------------
// fragment shader main
// ----------------------------------------------------------------------------

void main()
{
    colour = texture(glyphSampler, texCoord_fragment).rgb;
}
