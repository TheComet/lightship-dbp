#version 330 core

/* ----------------------------------------------------------------------------
 * vertex input data
 * ------------------------------------------------------------------------- */

in vec2 texCoord;

/* ----------------------------------------------------------------------------
 * output data
 * ------------------------------------------------------------------------- */

out vec4 colour;

/* ----------------------------------------------------------------------------
 * samplers
 * ------------------------------------------------------------------------- */

uniform sampler2D sampImage;

/* ----------------------------------------------------------------------------
 * fragment shader main
 * ------------------------------------------------------------------------- */

void main()
{
    colour = texture(sampImage, texCoord);
}
